<%= simple_form_for(@opening) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :technology %>
    <%= f.input :skillset %>
    <%= f.input :jobtitle %>
    <%= f.input :experience %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
