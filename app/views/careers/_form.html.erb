<%= simple_form_for(@career, :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :firstname, :label => 'First name'  %>
    <%= f.input :lastname , :label => 'Last name' %>
    <%= f.input :email, :label => 'Email' %>
    <%= f.input :mobile, :label => 'Mobile Number' %>
    <%= f.input :dob ,:as => :date, :start_year => Date.today.year - 90,:end_year => Date.today.year - 12, :label => 'Date of Birth', :include_blank => true %>
    <%= f.input :gender, :collection => [:Male, :Female], :include_blank => false %>
    <%= f.input :country ,:priority => [ "India" ], :label => 'Country' %>
    <%= f.input :skills, :label => 'Skills' %>
    <%= f.input :covernote, :label => 'Cover Note'  %>
    <%= f.input :resume,:as => :file, :label => 'Upload Resume'  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Apply" %>
  </div>
<% end %>
